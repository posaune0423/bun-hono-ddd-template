{
  "name": "bun-hono-ddd-template",
  "private": true,
  "packageManager": "bun@1.3.5",
  "engines": {
    "node": ">=24.0.0"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "latest",
      "zod": "latest",
      "drizzle-orm": "latest"
    },
    "catalogs": {
      "tooling": {
        "@prettier/plugin-oxc": "latest",
        "@types/node": "latest",
        "@types/bun": "latest",
        "@types/dotenv": "latest",
        "@typescript/native-preview": "latest",
        "eslint": "latest",
        "prettier": "latest",
        "prettier-plugin-organize-imports": "latest",
        "prettier-plugin-tailwindcss": "latest",
        "typescript": "latest"
      }
    }
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --check . --experimental-cli --experimental-ternaries",
    "format:fix": "prettier --write . --experimental-cli --experimental-ternaries",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:studio": "turbo run db:studio",
    "clean": "bun scripts/clean.ts"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "catalog:tooling",
    "@types/bun": "catalog:tooling",
    "@types/node": "catalog:tooling",
    "@types/dotenv": "catalog:tooling",
    "@typescript/native-preview": "catalog:tooling",
    "@bun-hono-ddd-template/prettier-config": "workspace:*",
    "dotenv": "^17.2.3",
    "jiti": "^2.6.1",
    "prettier": "catalog:tooling",
    "prettier-plugin-organize-imports": "catalog:tooling",
    "prettier-plugin-tailwindcss": "catalog:tooling",
    "turbo": "^2.7.2",
    "typescript": "catalog:tooling"
  },
  "peerDependencies": {
    "typescript": "catalog:tooling"
  },
  "prettier": "@bun-hono-ddd-template/prettier-config"
}
